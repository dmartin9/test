{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "padding": 5,
  "width": 1080,
  "height": 900,
  "autosize": "none",

  "signals": [
    {
      "name": "tension", "value": 0.85,
      "bind": {"input": "range", "min": 0, "max": 1, "step": 0.01}
    },
    {
      "name": "radius", "value": 280,
      "bind": {"input": "range", "min": 20, "max": 400}
    },
    {
      "name": "extent", "value": 360,
      "bind": {"input": "range", "min": 0, "max": 360, "step": 1}
    },
    {
      "name": "rotate", "value": 0
    },
    {
      "name": "textSize", "value": 8,
      "bind": {"input": "range", "min": 2, "max": 20, "step": 1}
    },
    {
      "name": "textOffset", "value": 2,
      "bind": {"input": "range", "min": 0, "max": 10, "step": 1}
    },
    {
      "name": "layout", "value": "cluster",
      "bind": {"input": "radio", "options": ["tidy", "cluster"]}
    },
    { "name": "colorIn", "value": "firebrick" },
    { "name": "colorOut", "value": "forestgreen" },
    { "name": "originX", "update": "width / 2" },
    { "name": "originY", "update": "height / 2" },
    {
      "name": "active", "value": null,
      "on": [
        { "events": "arc:mouseover", "update": "datum.id" },
        { "events": "mouseover[!event.item]", "update": "null" }
      ]
    }
  ],

  "data": [
    {
      "name": "tree",
      "url": "https://raw.githubusercontent.com/dmartin9/test/master/SimpleTree.json",
      "transform": [
        {
          "type": "stratify",
          "key": "id",
          "parentKey": "parent"
        },
        {
          "type": "partition",
          "field": "weight",
          "sort": {"field": "id", "order": "ascending"},
          "size": [
            {"signal": "2 * PI"}, {"signal": "width / 2"}],
          "as": ["a0", "r0", "a1", "r1", "depth", "children"]
        },
        {
          "type": "formula",
          "expr": "(datum.a0 + datum.a1 )/ 2",
          "as":   "angle"
        },
        {
          "type": "formula",
          "expr": "inrange(datum.angle, [PI, 2 * PI])",
          "as":   "leftside"
        },
        {
          "type": "formula",
          "expr": "originX + (radius-20)* cos(datum.angle - PI/2)",
          "as":   "x"
        },
        {
          "type": "formula",
          "expr": "datum.id == -1 ? originX : datum.x",
          "as": "x"
        },
        {
          "type": "formula",
          "expr": "originY + (radius-20)* sin(datum.angle - PI/2)",
          "as":   "y"
        },
        {
          "type": "formula",
          "expr": "datum.id == -1 ? originY : datum.y",
          "as": "y"
        }
      ]
    },
    {
      "name": "dependencies",
      "url":"https://raw.githubusercontent.com/dmartin9/test/master/SimpleDep.json",
      "transform": [
        {
          "type": "formula",
          "expr": "treePath('tree', datum.source, datum.target)",
          "as":   "treepath",
          "initonly": true
        },
        {
          "type": "lookup",
          "from": "tree",
          "key": "id",
          "values": ["weight"],
          "fields": ["source","target"],
          "as": ["sWeight","tWeight"]
        },
        {
          "type": "filter",
          "expr": "datum.sWeight > datum.tWeight"
        },
        {
          "type": "filter",
          "expr": "datum.similarity > 0"
        }
      ]
    },
    {
      "name": "leaves",
      "source": "tree",
      "transform": [
        {
          "type": "filter",
          "expr": "!datum.children"
        }
      ]
    },
    {
      "name": "selected",
      "source": "dependencies",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.source === active || datum.target === active"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": {"scheme": "category20"}
    }
  ],
  "marks": [
    {
      "type": "text",
      "from": {"data": "leaves"},
      "encode": {
        "enter": {
          "text": {"field": "name"},
          "baseline": {"value": "middle"}
        },
        "update": {
          "x": {"signal": "originX"},
          "y": {"signal": "originY"},
          "dx": {"signal": "0"},
          "theta": {"signal": "datum.angle"},
          "radius":{"signal":"radius+20"},
          "dx": {"signal": "textOffset * (datum.leftside ? 1 : -1)"},
          "align": {"signal": "datum.leftside ? 'right' : 'left'"},
          "angle": {"signal": "datum.leftside ? (datum.angle * 180 / PI) + 90:(datum.angle * 180 / PI) - 90"},
          "fontSize": {"signal": "textSize"},
          "fontWeight": [
            {"test": "indata('selected', 'source', datum.id)", "value": "bold"},
            {"test": "indata('selected', 'target', datum.id)", "value": "bold"},
            {"value": null}
          ],
          "fill": [
            {"test": "datum.id === active", "value": "black"},

            {"value": "black"}
          ]
        }
      }
    },
    {
      "type": "arc",
      "from": {"data": "leaves"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "id"},
          "stroke": {"scale": "color", "field": "id"}
        },
        "update": {
          "x": {"signal": "originX"},
          "y": {"signal": "originY"},
          "startAngle": {"signal": "datum.a0"},
          "endAngle": {"signal": "datum.a1"},
          "padAngle": {"value":0.01},
          "innerRadius": {"signal": "radius-20"},
          "outerRadius": {"signal": "radius"},
          "strokeWidth": {"value": 0.1},
          "opacity": [{"test": "active != null && !(indata('selected', 'source', datum.id)) && !(indata('selected', 'target', datum.id))", "value": 0},
          {"value": 1}]
        }
      }
    },
    {
      "type": "group",
      "from": {
        "facet": {
          "name":  "path",
          "data":  "dependencies",
          "field": "treepath"
        }
      },
      "marks": [
        {
          "type": "line",
          "interactive": false,
          "from": {"data": "path"},
          "encode": {
            "enter": {
              "interpolate": {"value": "bundle"},
              "strokeWidth":  [{"test": "(parent.similarity  > 15)", "signal": "(parent.similarity - 15) * 0.5"},{"value":0.5}],
              "stroke": {
                "scale": "color", "field": "id"
              }
            },
            "update": {
              "strokeOpacity": [
                {"test": "active != null && parent.source != active && parent.target != active", "value":0 },
                {"test": "parent.source === active || parent.target === active", "value": 1},
                {"test": "parent.similarity > 15", "value":0.5},
                {"value": 0.25}
              ],
              "tension": {"signal": "tension"},
              "x": {"field": "x"},
              "y": {"field": "y"}
            }
          }
        }
      ]
    }
  ]
}
